<?xml version="1.0"?>
<config>
    <modules>
        <Igorludgero_Homeimages>
            <version>1.0.0</version>
        </Igorludgero_Homeimages>
    </modules>
    <global>
        <resources>
            <igorludgero_homeimages_setup>
                <setup>
                    <module>Igorludgero_Homeimages</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </igorludgero_homeimages_setup>
            <igorludgero_homeimages_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </igorludgero_homeimages_write>
            <igorludgero_homeimages_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </igorludgero_homeimages_read>
        </resources>
        <helpers>
            <homeimages>
                <class>Igorludgero_Homeimages_Helper</class>
            </homeimages>
        </helpers>
        <blocks>
            <homeimages>
                <class>Igorludgero_Homeimages_Block</class>
            </homeimages>
        </blocks>
        <models>
            <homeimages>
                <class>Igorludgero_Homeimages_Model</class>
                <resourceModel>homeimages_mysql4</resourceModel>
            </homeimages>
            <homeimages_mysql4>
                <class>Igorludgero_Homeimages_Model_Mysql4</class>
                <entities>
                    <homeimages>
                        <table>igorludgero_homeimages_images</table>
                    </homeimages>
                </entities>
            </homeimages_mysql4>
        </models>
    </global>
    <adminhtml>
        <translate>
            <modules>
                <Igorludgero_Homeimages>
                    <files>
                        <default>Igorludgero_Homeimages.csv</default>
                    </files>
                </Igorludgero_Homeimages>
            </modules>
        </translate>
        <layout>
            <updates>
                <Igorludgero_Homeimages>
                    <file>igorludgero_homeimages.xml</file>
                </Igorludgero_Homeimages>
            </updates>
        </layout>
        <menu>
            <homeimages translate="title">
                <title>[Igorludgero] - Home Images</title>
                <sort_order>20</sort_order>
                <children>
                    <igorludgero_homeimages_manage translate="title" module="homeimages">
                        <sort_order>0</sort_order>
                        <title>Manager Home Images</title>
                        <action>adminhtml/homeimages/</action>
                    </igorludgero_homeimages_manage>
                </children>
            </homeimages>
        </menu>
    </adminhtml>
    <admin>
        <translate>
            <modules>
                <homeimages>
                    <files>
                        <default>Igorludgero_Homeimages.csv</default>
                    </files>
                </homeimages>
            </modules>
        </translate>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <Igorludgero_Homeimages before="Mage_Adminhtml">Igorludgero_Homeimages_Adminhtml</Igorludgero_Homeimages>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
    <frontend>
        <translate>
            <modules>
                <homeimages>
                    <files>
                        <default>Igorludgero_Homeimages.csv</default>
                    </files>
                </homeimages>
            </modules>
        </translate>
        <routers>
            <Igorludgero_Homeimages>
                <use>standard</use>
                <args>
                    <module>Igorludgero_Homeimages</module>
                    <frontName>homeimages</frontName>
                </args>
            </Igorludgero_Homeimages>
        </routers>
        <layout>
            <updates>
                <Igorludgero_Homeimages>
                    <file>igorludgero_homeimages.xml</file>
                </Igorludgero_Homeimages>
            </updates>
        </layout>
    </frontend>
</config>
